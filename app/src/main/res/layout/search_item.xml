<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/noColor">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_movie_item_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black2"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:background="@drawable/full_corner_background_yellow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/poster_movie_imageView_id"
                app:layout_constraintStart_toStartOf="@+id/poster_movie_imageView_id"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/poster_movie_imageView_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:adjustViewBounds="true"
                android:foreground="@drawable/full_image_corner_black"
                android:padding="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded"
                tools:src="@drawable/poster"
                tools:targetApi="m" />

            <ProgressBar
                android:id="@+id/progress_bar_movie_item_id"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background_black"
                app:layout_constraintBottom_toBottomOf="@+id/poster_movie_imageView_id"
                app:layout_constraintEnd_toEndOf="@+id/poster_movie_imageView_id"
                app:layout_constraintStart_toStartOf="@+id/poster_movie_imageView_id"
                app:layout_constraintTop_toTopOf="@+id/poster_movie_imageView_id" />

            <TextView
                android:id="@+id/movie_title_textView_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/whit"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView_media_type_id"
                app:layout_constraintEnd_toStartOf="@+id/image_setting_watch_list_id"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="ONWRD ONWRD ONWRD ONWRD ONWRD" />

            <TextView
                android:id="@+id/textView_media_type_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/full_corner_background_yellow"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/black2"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/release_data_movie_textView_id"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/movie_title_textView_id"
                tools:text="@string/tv_type" />

            <TextView
                android:id="@+id/release_data_movie_textView_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/whit"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_media_type_id"
                app:layout_constraintEnd_toStartOf="@+id/imageView_rate_movie_imageView_id"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView_media_type_id"
                app:layout_constraintTop_toTopOf="@+id/textView_media_type_id"
                tools:text="2020/12/23" />

            <ImageView
                android:id="@+id/imageView_rate_movie_imageView_id"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="right|center"
                android:layout_marginStart="8dp"
                android:layout_weight="3"
                android:src="@drawable/ic_star_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/release_data_movie_textView_id"
                app:layout_constraintEnd_toStartOf="@+id/rate_movie_textView_id"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/release_data_movie_textView_id"
                app:layout_constraintTop_toTopOf="@+id/release_data_movie_textView_id" />

            <TextView
                android:id="@+id/rate_movie_textView_id"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_weight="3"
                android:gravity="right|center"
                android:textColor="@color/whit"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_rate_movie_imageView_id"
                app:layout_constraintEnd_toStartOf="@+id/space4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView_rate_movie_imageView_id"
                app:layout_constraintTop_toTopOf="@+id/imageView_rate_movie_imageView_id"
                tools:text="8.2" />

            <Space
                android:id="@+id/space4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/rate_movie_textView_id"
                app:layout_constraintEnd_toStartOf="@+id/image_setting_watch_list_id"
                app:layout_constraintStart_toEndOf="@+id/rate_movie_textView_id"
                app:layout_constraintTop_toTopOf="@+id/rate_movie_textView_id" />

            <!-- <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/watch_list_menu" />-->

            <ImageView
                android:id="@+id/image_setting_watch_list_id"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/settings1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute" />

            <LinearLayout
                android:id="@+id/include_dialog_setting_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/image_setting_watch_list_id"
                app:layout_constraintEnd_toStartOf="@+id/image_setting_watch_list_id"
                app:layout_constraintTop_toTopOf="@+id/image_setting_watch_list_id">

                <include
                    layout="@layout/watch_list_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@drawable/corner_background_gone_search_item"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView_copy_name_movie_id"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/ic_outline_file_copy_24" />

                <ImageView
                    android:id="@+id/imageView_share_movie_id"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_share_24" />

                <ImageView
                    android:id="@+id/imageView_add_movie_to_watch_list_id"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_playlist_add_24" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>